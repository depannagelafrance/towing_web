<label>Bevestiging hinderverwekker:</label>
<div class="causer_short_info_wrapper">
{{#if company_name}}
  <div class="nuisance_value">{{company_name}}</div>
{{else}}
  {{#if last_name}}
    {{#if first_name}}
      <div class="nuisance_value">{{first_name}} {{last_name}}</div>
    {{/if}}
  {{/if}}
{{/if}}

{{#if street}}
  {{#if street_number}}
    <div class="nuisance_value">{{street}} {{street_number}} {{street_pobox}}</div>
  {{/if}}
{{/if}}

{{#if city}}
  {{#if zip}}
    <div class="nuisance_value">{{zip}} {{city}}</div>
  {{/if}}
{{/if}}
</div>
<div class="nuisance_value">
  <label class="notbold">Hinderverwekker afwezig?</label>
  <input type="checkbox" name="causer_not_present" id="causer_not_present" value="1" {{#if causer_not_present}}checked{{/if}}/>
</div>
